Private Sub imgFec_Click(Index As Integer)
    
    Screen.MousePointer = vbHourglass
    
    Select Case Index
    Case 0, 1
        IndCodigo = Index
    
        'FECHA
        Set frmF = New frmCal
        frmF.Fecha = Now
        If txtfecha(Index).Text <> "" Then frmF.Fecha = CDate(txtfecha(Index).Text)
        frmF.Show vbModal
        Set frmF = Nothing
        PonFoco txtfecha(Index)
    End Select
    
    Screen.MousePointer = vbDefault

End Sub

